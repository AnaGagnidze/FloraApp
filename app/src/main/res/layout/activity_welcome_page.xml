<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcomePage">

    <ImageView
        android:id="@+id/WelcomeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/welcome_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_first_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/WelcomeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="23sp"
        android:layout_marginBottom="212dp"
        android:typeface="sans"
        android:textColor="@color/killarney"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/StartShoppingButton"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/start_shopping"
        android:typeface="sans"
        android:background="@drawable/welcome_button_design"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/WelcomeText"/>

</androidx.constraintlayout.widget.ConstraintLayout>