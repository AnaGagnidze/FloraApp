<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeaceLilyPlant"
    android:background="@drawable/peace_lily">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/AddToCartButton"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/add_to_cart"
        android:typeface="sans"
        android:background="@drawable/ic_add_to_cart_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"/>

    <ImageButton
        android:onClick="backToCatalog"
        android:id="@+id/backToCatalogButton"
        android:contentDescription="@string/backicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_goback"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>